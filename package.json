{
  "name": "doc2data-mdsplitter",
  "version": "0.1.0",
  "description": "Card-based document structuring app (Electron + React + TypeScript)",
  "private": true,
  "type": "module",
  "main": "dist/main/index.js",
  "author": "doc2data team",
  "license": "UNLICENSED",
  "scripts": {
    "start": "npm-run-all -p dev:renderer dev:main dev:electron",
    "dev:renderer": "vite --config configs/vite.renderer.config.ts",
    "dev:main": "tsc -p tsconfig.build.json --watch",
    "dev:electron": "tsx scripts/dev-electron.ts",
    "build": "run-s build:renderer build:electron",
    "build:renderer": "vite build --config configs/vite.renderer.config.ts",
    "build:electron": "tsc -p tsconfig.build.json",
    "electron": "electron dist/main/index.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "chardet": "^2.1.0",
    "electron": "^31.2.0",
    "encoding-japanese": "^2.2.0",
    "iconv-lite": "^0.7.0",
    "lucide-react": "^0.369.0",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-split": "^2.0.14",
    "react-window": "^1.8.7",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.2.0",
    "@types/encoding-japanese": "^2.2.1",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "happy-dom": "^20.0.5",
    "jsdom": "^24.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.9",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.4",
    "vitest": "^1.6.0",
    "wait-on": "^7.2.0"
  }
}
