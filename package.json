{
  "name": "mdsplitter",
  "version": "0.1.0",
  "private": true,
  "description": "Document cardization desktop app",
  "engines": {
    "node": "22.20.0",
    "npm": ">=10.8.0"
  },
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently -k -s first -n renderer,main,electron \"npm:dev:renderer\" \"npm:dev:main\" \"npm:electron:dev\"",
    "dev:renderer": "vite build --watch --mode development",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "electron:dev": "wait-on dist/renderer/index.html dist/main/main.js && cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true electron dist/main/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "electron": "cross-env NODE_ENV=production electron dist/main/main.js",
    "test": "npm run test:unit",
    "test:unit": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint \"{src,tests}/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^22.7.4",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
