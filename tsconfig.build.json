{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false
  },
  "include": [
    "src/main/**/*.ts",
    "src/shared/**/*.ts",
    "src/shared/**/*.tsx"
  ],
  "exclude": ["src/renderer", "**/*.test.ts", "**/*.test.tsx"]
}
